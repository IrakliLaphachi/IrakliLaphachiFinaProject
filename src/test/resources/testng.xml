<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="TestsSuite" parallel="methods" thread-count="4" >
    <test preserve-order="true" name="UITest">
        <classes>
            <class name="UserTests">
                <methods>
                    <include name="NewUserTest"/>
                    <include name="ExistingUser"/>
                    <include name="IncorrectLogin"/>
                    <include name="CorrectLogin"/>
                    <include name="UserLogout"/>
                </methods>
            </class>
            <class name="TestCasesTests">
                <methods>
                    <include name="TestCaseTabTest"/>
                </methods>
            </class>
            <class name="ProductsTests">
                <methods>
                    <include name="ProductViewTest"/>
                    <include name="ProductSearchTest"/>
                    <include name="ProductToCartTest"/>
                </methods>
            </class>
            <class name="ContactUsTests">
                <methods>
                    <include name="SubmitContactUsTest"/>
                </methods>
            </class>
        </classes>
    </test>
    <test name="APITests">
        <classes>
            <class name="APITests">
                <methods>
                    <include name="getProductList"/>
                    <include name="postToProductList"/>
                    <include name="getBrandsList"/>
                    <include name="putToBrandsList"/>
                    <include name="postToSearch"/>
                    <include name="postEmptySearch"/>
                    <include name="postValidLogin"/>
                    <include name="postInvalidLogin"/>
                    <include name="postEmptyLogin"/>
                    <include name="getUserDetails"/>
                </methods>
            </class>
        </classes>
    </test>
</suite>